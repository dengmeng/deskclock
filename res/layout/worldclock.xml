<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/background" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <View android:id="@+id/timezone_dropdown_anchor" android:layout_width="fill_parent" android:layout_height="0.0px" android:layout_marginLeft="@dimen/timezone_dropdown_anchor_margin_horizontal" android:layout_marginRight="@dimen/timezone_dropdown_anchor_margin_horizontal" />
    <LinearLayout android:background="@drawable/listview_bg" android:layout_width="fill_parent" android:layout_height="0.0dip" android:layout_weight="1.0">
        <ListView android:id="@android:id/list" android:layout_width="fill_parent" android:layout_height="wrap_content" />
        <TextView android:id="@+id/worldclock_empty" android:text="@string/worldclock_empty_text" android:drawableTop="@drawable/worldclock_empty" style="@style/EmptyViewTextStyle" />
    </LinearLayout>
    <LinearLayout android:id="@+id/add_timezone_new" android:gravity="center" android:background="@drawable/bottom_bar_bg" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/menu_add_worldclock" style="@style/AddButtonTextStyle" />
    </LinearLayout>
</LinearLayout>