<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.ListView" parent="@android:attr/textAppearance">
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
    <style name="TextAppearance.ListView.PrimaryItem" parent="@style/TextAppearance.ListView">
        <item name="android:textSize">@dimen/list_primary_text_size</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:shadowColor">@color/primary_text_color_shadow</item>
    </style>
    <style name="Widget.Holo.Light.ActionBar.TabText" parent="@android:style/Widget.Holo.Light.ActionBar.TabText.Inverse">
        <item name="android:textColor">@color/primary_tab_text</item>
    </style>
    <style name="Widget.Holo.Light.ActionBar.Solid.HomeUp" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:logo">@drawable/ab_home_up_divider</item>
        <item name="android:displayOptions">useLogo|showHome|homeAsUp|showTitle</item>
    </style>
    <style name="Widget.Holo.Light.ExpandableListView" parent="@android:style/Widget.Holo.Light.ExpandableListView">
        <item name="android:groupIndicator">@drawable/expander_group_holo_light</item>
        <item name="android:indicatorLeft">16.0dip</item>
    </style>
    <style name="Widget.Holo.Light.ExpandableListView.White" parent="@style/Widget.Holo.Light.ExpandableListView" />
    <style name="Widget.Holo.Light.ActionButton.Overflow" parent="@android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_moreoverflow_holo_light</item>
    </style>
    <style name="Theme.Light" parent="@android:style/Theme.Holo.Light">
        <item name="android:expandableListPreferredItemPaddingLeft">35.0dip</item>
        <item name="android:expandableListViewStyle">@style/Widget.Holo.Light.ExpandableListView</item>
        <item name="android:expandableListViewWhiteStyle">@style/Widget.Holo.Light.ExpandableListView.White</item>
        <item name="android:actionBarStyle">@style/Widget.Holo.Light.ActionBar.Solid.HomeUp</item>
        <item name="android:actionBarTabTextStyle">@style/Widget.Holo.Light.ActionBar.TabText</item>
        <item name="android:actionOverflowButtonStyle">@style/Widget.Holo.Light.ActionButton.Overflow</item>
        <item name="android:homeAsUpIndicator">@drawable/ab_home_up</item>
    </style>
    <style name="EditorCustomActionBarTheme" parent="@android:style/Theme.Holo">
        <item name="android:background">@drawable/custom_action_bar_bg</item>
    </style>
    <style name="clock">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="AlarmClockTheme" parent="@android:style/Theme.Holo.DialogWhenLarge" />
    <style name="SetAlarmTheme" parent="@android:style/Theme.Holo.DialogWhenLarge" />
    <style name="AlarmAlertFullScreenTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
    <style name="RoundTouchButton">
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ButtonStripLeft">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_strip_trans_left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ButtonStripMiddle">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_strip_trans_middle</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ButtonStripRight">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_strip_trans_right</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="alarm_list_left_column">
        <item name="android:layout_width">@dimen/alarm_list_left_column_width</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="AlarmItemTimezoneStyle" parent="@style/TextAppearance.ListView.PrimaryItem">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:shadowColor">@color/secondary_text_color_shadow</item>
        <item name="android:textSize">@dimen/alarm_item_time_zone_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/alarm_item_time_zone_drawable_padding</item>
    </style>
    <style name="TimeDigitsStyle" parent="@style/TextAppearance.ListView.PrimaryItem">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:shadowColor">@color/secondary_text_color_shadow</item>
        <item name="android:textSize">30.0sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="AlarmCheckBoxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:background">@drawable/btn_check_label_background</item>
        <item name="android:button">@drawable/alarm_checkbox</item>
    </style>
    <style name="DeskClockTabText" parent="@style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">@color/primary_tab_text</item>
    </style>
    <style name="DeskClockDarkActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_light_holo</item>
        <item name="android:height">@dimen/desk_clock_dark_action_bar_height</item>
        <item name="android:displayOptions"></item>
        <item name="android:backgroundStacked">@drawable/ab_solid_light_holo</item>
    </style>
    <style name="DeskClockTheme" parent="@style/Theme.Light">
        <item name="android:actionBarStyle">@style/DeskClockDarkActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/DeskClockTabText</item>
        <item name="android:actionOverflowButtonStyle">@style/Widget.Holo.Light.ActionButton.Overflow</item>
        <item name="android:homeAsUpIndicator">@drawable/ab_home_up</item>
    </style>
    <style name="EmptyViewTextStyle">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/empty_view_text_padding_top</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/empty_view_text_drawable_padding</item>
    </style>
    <style name="AddAlarmTheme" parent="@style/Theme.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/EditorCustomActionBarTheme</item>
    </style>
    <style name="TimerButtonStyle">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/timer_button_drawable_padding</item>
    </style>
    <style name="NumberViewTextStyle">
        <item name="android:textSize">@dimen/number_view_text_size</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:shadowColor">#80ffffff</item>
    </style>
    <style name="TutorialTextStyle">
        <item name="android:textSize">@dimen/tutorial_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AlarmDurationTextStyle">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/alarm_duration_text_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/alarm_duration_text_margin_bottom</item>
    </style>
    <style name="AddButtonTextStyle">
        <item name="android:textColor">@*android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableLeft">@drawable/ic_menu_add</item>
        <item name="android:drawablePadding">@dimen/add_button_text_padding</item>
    </style>
    <style name="SnoozeConfirmActivityTheme" parent="@style/Theme.Light">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@*android:style/Animation.Translucent</item>
    </style>
        <style name="TextAppearance.ListView.SecondaryItem" parent="@style/TextAppearance.ListView">
        <item name="android:textSize">@dimen/list_secondary_text_size</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:shadowColor">@color/secondary_text_color_shadow</item>
    </style>
</resources>
